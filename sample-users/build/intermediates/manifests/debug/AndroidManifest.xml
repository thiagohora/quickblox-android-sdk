<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quickblox.sample.user"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.quickblox.sample.user.activities.SplashActivity"
            android:label="QuickBlox User Sample" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quickblox.sample.user.activities.GetAllUsersActivity"
            android:label="Users" />
        <activity
            android:name="com.quickblox.sample.user.activities.SignUpUserActivity"
            android:label="Sign Up" />
        <activity
            android:name="com.quickblox.sample.user.activities.SignInActivity"
            android:label="Log In"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.quickblox.sample.user.activities.ShowUserActivity"
            android:label="Show User" />
        <activity
            android:name="com.quickblox.sample.user.activities.UpdateUserActivity"
            android:label="Update User" />
    </application>

</manifest>